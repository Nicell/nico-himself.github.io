---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';
---

<BaseLayout title="Nico Salm | Teams">
	<div>
		<div class="text-3xl w-full font-bold mb-5">Teams and Organizations</div>
	</div>

	<HorizontalCard
		title="Wisconsin Quantum Computing Club"
        subtitle="Executive Board Member (2022–)"
		img="/WQCC_logo.jpg"
		desc="The WQCC connects, educates, and empowers quantum computing enthusiasts at UW Madison. We welcome students from all disciplines, offering workshops, collaborative learning, and resources to explore quantum computing. We facilitate networking, share opportunities, and support career development for our members. Join us in shaping the future of quantum computing."
		url="https://wqi.wisc.edu/wqcc/"
	/>
	<div class="divider my-0"></div>

	<HorizontalCard
		title="Network for Undergraduate Machine Learning Based Research (NUMBR)"
        subtitle="Undergraduate Research Assistant (2022–)"
		img="/numbr.jpg"
		desc="The WQCC connects, educates, and empowers quantum computing enthusiasts at UW Madison. We welcome students from all disciplines, offering workshops, collaborative learning, and resources to explore quantum computing. We facilitate networking, share opportunities, and support career development for our members. Join us in shaping the future of quantum computing."
		url="https://wqi.wisc.edu/wqcc/"
